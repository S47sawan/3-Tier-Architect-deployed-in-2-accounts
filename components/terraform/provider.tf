# ===================================================================================================================
# Terraform version and module source information
# ===================================================================================================================
terraform {
  required_version = ">= 0.14"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 3.0"
    }
  }
}
# ===================================================================================================================
# Cloud provider information
# ===================================================================================================================
provider "aws" {
  region = var.region_name
}

provider "aws" {
  alias  = "east"
  region = "us-east-1"
}